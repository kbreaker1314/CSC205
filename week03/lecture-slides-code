/*
 * CSC205 Week03
 * Lecture slides / textbook code
 * Exercise: C# method definition, invocation, etc.
 */
using System;

namespace CSC205
{
    public class Program
    {
        public static void Main(string[] args)
        {
            string s;
            Console.WriteLine("Please enter your name:");
            s = Console.ReadLine();
            Console.WriteLine("Please enter your age (1-99):");
            int age = 0;
            age = Convert.ToInt32(Console.ReadLine());
            Greeting(s, age);
        }
        public static void Greeting(string name, int age)
        {
            Console.WriteLine("Hello " + name + "!");
            if (age>21)
                Console.WriteLine("you can buy alcohol!");
            else
                Console.WriteLine("Sorry, you can't buy alcohol!");
        }
    }
}



/*
 * CSC205 Week03
 * Lecture slides / textbook code
 * Exercise: C# method definition, invocation, etc.
 */
using System;

namespace CSC205
{
    public class Program
    {
        public static void Main(string[] args)
        {
            string s;
            Console.WriteLine("Please enter your name:");
            s = Console.ReadLine();
            Console.WriteLine("Please enter your age (1-99):");
            int age = 0;
            age = Convert.ToInt32(Console.ReadLine());
            Greeting(s, age);
        }
        public static void Greeting(string name, int age)
        {
            Console.WriteLine("Hello " + name + "!");
            if (CheckAge(age))
                Console.WriteLine("you can buy alcohol!");
            else
                Console.WriteLine("Sorry, you can't buy alcohol!");
        }
        public static bool CheckAge(int age)
        {
            if (age > 21)
                return true;
            else
                return false;
        }
    }
}



//======== recursion ========
/*
 * CSC205 Week03
 * Lecture slides / textbook code
 * Exercise: Recursion
 */
using System;

namespace CSC205
{
    public class Program
    {
        public static void Main(string[] args)
        {
            Countdown(5);
        }
        public static void Countdown(int n)
        {
            if (n == 0)
            {
                Console.WriteLine("Blastoff!");
            }
            else
            {
                Console.WriteLine(n);
                Countdown(n - 1);
            }
        }
    }
}


/*
 * CSC205 Week03
 * Lecture slides / textbook code
 * Exercise: Recursion
 */
using System;

namespace CSC205
{
    public class Program
    {
        public static void Main(string[] args)
        {
            NLines(5);
        }
        public static void NLines(int n)
        {
            if (n > 0)
            {
                Console.WriteLine("---------------");
                NLines(n - 1);
            }
        }

    }
}


/*
 * CSC205 Week03
 * Lecture slides / textbook code
 * Exercise: Recursion - factorial function
 */
using System;

namespace CSC205
{
    public class Program
    {
        public static void Main(string[] args)
        {
            int i = 17;
            Console.WriteLine($"Factorial of {i} is {Factorial(i)}");
        }
        public static int Factorial(int n)
        {
            if (n == 0)
            {
                return 1;
            }
            else
            {
                int recurse = Factorial(n - 1);
                int result = n * recurse;
                return result;
            }
        }
    }
}

